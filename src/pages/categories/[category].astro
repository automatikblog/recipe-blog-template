---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

// üöÄ ensure /categories/blog/ always exists
export async function getStaticPaths() {
  const posts = await getCollection("blog");

  // Mapeia categorias √∫nicas (slug + nome original)
  const categoryMap = new Map();
  categoryMap.set("blog", { category: "blog", originalName: "Blog" });

  posts.forEach((p) => {
    const raw = p.data.category;
    if (raw) {
      const slug = raw
        .toLowerCase()
        .normalize("NFD")
        .replace(/\p{Mn}/gu, "")
        .replace(/\s+/g, "-");
      if (!categoryMap.has(slug)) {
        categoryMap.set(slug, {
          category: slug,
          originalName: raw,
        });
      }
    }
  });

  return Array.from(categoryMap.values()).map((item) => ({
    params: { category: item.category },
    props: { originalCategoryName: item.originalName },
  }));
}

// üß† Get current category from URL
const { category } = Astro.params;

// üéÅ Get original name from props
const { originalCategoryName } = Astro.props;

// Filtro base
const filterKey = originalCategoryName?.toLowerCase() || "blog";

// üîç Load and filter posts
const posts = (await getCollection("blog"))
  .map((p) => ({
    ...p,
    normalizedCat: (p.data.category || "Blog").toLowerCase(),
  }))
  .filter((p) => {
    if (category === "blog") return true;
    return p.normalizedCat === filterKey;
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// üè∑Ô∏è Category title for header
const categoryTitle =
  originalCategoryName ||
  category.charAt(0).toUpperCase() + category.slice(1);
const pageTitle = `Categoria: ${categoryTitle}`;
---

<!doctype html>
<html lang="pt">
  <head>
    <BaseHead title={pageTitle} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        max-width: 90%;
        margin: 0 auto;
        padding: 2rem 0;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul li a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1
          style="text-align:center; font-size:2rem; font-weight:700; margin-bottom:2rem;"
        >
          {pageTitle}
        </h1>

        {posts.length > 0 ? (
          <ul>
            {posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                    />
                  )}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <p style="text-align:center;">Nenhum post encontrado nesta categoria.</p>
        )}
      </section>
    </main>
    <Footer />
  </body>
</html>
